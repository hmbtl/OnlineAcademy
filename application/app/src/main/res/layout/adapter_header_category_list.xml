<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">



    <!-- Courses on Sale view-->
    <TextView
        android:id="@+id/text_view_popular_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_categories"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:paddingBottom="5.0dip"
        android:paddingLeft="15.0dip"
        android:paddingTop="5.0dip"
        android:text="@string/popular_courses"
        android:textColor="#646464"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_popular_courses"
        android:layout_width="fill_parent"
        android:layout_height="240.0dip"
        android:layout_marginBottom="5.0dip"
        android:clipToPadding="false"
        android:paddingLeft="5.0dip" />




    <TextView
        android:id="@+id/text_view_all_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_categories"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:paddingBottom="5.0dip"
        android:paddingLeft="15.0dip"
        android:paddingTop="5.0dip"
        android:text="@string/all_categories"
        android:textColor="#646464"
        android:textStyle="bold" />
</LinearLayout>