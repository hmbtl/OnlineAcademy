<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:focusable="true"
            android:descendantFocusability="blocksDescendants"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/chapter_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4234da"
                android:gravity="center"
                android:paddingBottom="40dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="50dp"
                android:text="@string/dummy_course_title"
                android:textColor="#fff"
                android:textSize="35sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/chapter_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/course_test_picture_history"
                android:visibility="gone" />


            <TextView
                android:id="@+id/chapter_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:text="@string/dummy_course_content"
                android:textSize="25sp"
                android:textStyle="italic" />


        </LinearLayout>

    </ScrollView>
</android.support.v7.widget.CardView>